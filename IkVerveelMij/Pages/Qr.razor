@page "/qr"
@inject NavigationManager nav

<h1>QR Fun</h1>

<div class="badge">
	<div class="@color">
		<br />
	</div>
	@if(name != "")
	{
		<p class="name">
		 @name 
		</p>
	}
</div>


@code {
	string color = "";
	string name = "";

	protected override void OnInitialized()
	{
		var uri = nav.ToAbsoluteUri(nav.Uri);

		color = nav.ExtractQueryStringByKey<string>("color");
		name = nav.ExtractQueryStringByKey<string>("name");


		if(color !="green" && color !="red")
		{
			color = "";
		}
	}
}
